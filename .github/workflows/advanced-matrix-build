name: Advanced Matrix Build (Multi-OS)

# This is an alternative/advanced workflow showing cross-platform matrix builds
# You can use this if you want to demonstrate builds across different operating systems

on:
  workflow_dispatch:  # Manual trigger only for this advanced version

jobs:
  advanced-matrix-build:
    name: Build on ${{ matrix.os }} - Python ${{ matrix.python-version }}
    runs-on: ${{ matrix.os }}
    
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]
        python-version: ['3.10']
        include:
          - os: ubuntu-latest
            artifact-suffix: 'linux'
          - os: windows-latest
            artifact-suffix: 'windows'
          - os: macos-latest
            artifact-suffix: 'macos'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: matrix-1a8d532
        run: |
          echo "Building on ${{ matrix.os }} with Python ${{ matrix.python-version }}"
          echo "Artifact suffix: ${{ matrix.artifact-suffix }}"
      
      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v4
        with:
          python-version: ${{ matrix.python-version }}
      
      - name: Display environment info
        run: python --version
      
      - name: Run sample application
        run: python main.py
      
      - name: Generate build artifact
        shell: bash
        run: |
          mkdir -p build-artifacts
          echo "Build output for ${{ matrix.os }}" > build-artifacts/output.txt
          echo "Python version: ${{ matrix.python-version }}" >> build-artifacts/output.txt
          echo "Runner OS: ${{ runner.os }}" >> build-artifacts/output.txt
          
          # Copy the generated system info
          if [ -f system-info.json ]; then
            cp system-info.json build-artifacts/
          fi
      
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: build-939bd23-${{ matrix.artifact-suffix }}
          path: build-artifacts/
          retention-days: 30
